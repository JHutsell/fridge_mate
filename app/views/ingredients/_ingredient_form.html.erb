<div id="ingredient-form">
    <%= form_for @ingredient do |f| %>
        <%= f.hidden_field :user_id %>
        <br>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br><br>
        <%= f.label :notes %>
        <%= f.text_area :notes %>
        <br><br>
        <%= f.label :urgency, 'Does this ingredient need to be used soon?' %>
        <%= f.select :urgency, [:true, :false] %>
        <br><br>
        <%= f.submit %>
    <% end %>
    <br><br>
    <%= button_to("Return to your Home Page!", current_user, method: :get, :class => "btn btn-success") %>

</div>